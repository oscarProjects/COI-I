<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Returns">


        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="#fff"
            android:elevation="20dp"
            android:orientation="vertical"
            android:padding="5dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_guardar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/linear_ruta_returns"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_ruta_returns"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_margin"
                    android:text="@string/returns_ruta"
                    android:textSize="30sp"
                    app:fontFamily="@font/bebasneue_regular" />

                <Spinner
                    android:id="@+id/spinner_ruta_returns"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:spinnerMode="dialog" />

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="8dp"
                android:layout_marginTop="5dp"
                android:background="#CCDEC2"></View>

            <LinearLayout
                android:id="@+id/linear_seccion_returns"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_seccion_returns"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_margin"
                    android:text="@string/returns_seccion"
                    android:textSize="30sp"
                    app:fontFamily="@font/bebasneue_regular" />

                <Spinner
                    android:id="@+id/spinner_seccion_returns"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:spinnerMode="dialog" />

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="8dp"
                android:layout_marginTop="5dp"
                android:background="#CCDEC2"></View>

            <LinearLayout
                android:id="@+id/linear_unidad_medida_returns"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_unidad_medida_returns"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_margin"
                    android:text="@string/returns_unidad_medida"
                    android:textSize="30sp"
                    app:fontFamily="@font/bebasneue_regular" />

                <Spinner
                    android:id="@+id/spinner_unidad_medida_returns"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:prompt="@string/seleccione_un_elemento"
                    android:spinnerMode="dialog" />

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="8dp"
                android:layout_marginTop="5dp"
                android:background="#CCDEC2"></View>

            <LinearLayout
                android:id="@+id/linear_four_returns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_producto_sku_returns"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/text_margin"
                    android:text="@string/returns_prod_sku"
                    android:textSize="30sp"
                    app:fontFamily="@font/bebasneue_regular" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab_returns"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:layout_anchor="@id/app_bar"
                    app:layout_anchorGravity="center"
                    app:maxImageSize="30dp"
                    app:srcCompat="@drawable/barcode_scan" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_editText_four_returns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edittext_producto_sku_returns"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="@string/hint_edit_text"
                    android:inputType="number"
                    app:fontFamily="@font/bebasneue_regular" />

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="8dp"
                android:layout_marginTop="5dp"
                android:background="#CCDEC2"></View>

            <LinearLayout
                android:id="@+id/linear_descripcion_returns"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_descripcion_returns"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_margin"
                    android:text="@string/returns_descripcion"
                    android:textSize="30sp"
                    app:fontFamily="@font/bebasneue_regular" />

                <ImageView
                    android:id="@+id/imageView18"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:contentDescription="@string/contentDescriptionImages"
                    app:srcCompat="@drawable/icon_edit" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_editText_six_returns"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edittext_descripcion_returns"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:enabled="false"
                    android:hint="@string/hint_edit_text"
                    android:inputType="text"
                    app:fontFamily="@font/bebasneue_regular" />

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="8dp"
                android:layout_marginTop="5dp"
                android:background="#CCDEC2"></View>

            <LinearLayout
                android:id="@+id/linear_five"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_cantidad_returns"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_margin"
                    android:text="@string/returns_cantidad"
                    android:textSize="30sp"
                    app:fontFamily="@font/bebasneue_regular" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:contentDescription="@string/contentDescriptionImages"
                    app:srcCompat="@drawable/icon_edit" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_editText_five_returns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edittext_cantidad_returns"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="@string/hint_edit_text"
                    android:inputType="text"
                    app:fontFamily="@font/bebasneue_regular" />

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="8dp"
                android:layout_marginTop="5dp"
                android:background="#CCDEC2"></View>

        </LinearLayout>

        <Button
            android:id="@+id/btn_guardar"
            android:layout_width="match_parent"
            android:layout_height="55dp"

            android:layout_marginTop="8dp"
            android:background="#0B8E36"
            android:fontFamily="@font/bebasneue_regular"
            android:gravity="center"
            android:text="@string/button_guardar"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintVertical_bias="1.0" />


    </android.support.constraint.ConstraintLayout>

</ScrollView>