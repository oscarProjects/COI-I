<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Read_Route_Details">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="#fff"
        android:elevation="20dp"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <View
            android:layout_width="fill_parent"
            android:layout_height="8dp"
            android:layout_marginTop="5dp"
            android:background="#CCDEC2"></View>

        <LinearLayout
            android:id="@+id/linear_sku_rrd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:text="@string/rrd_sku"
                android:textSize="25sp"
                app:fontFamily="@font/bebasneue_regular" />

            <TextView
                android:id="@+id/textView_set_sku_read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:text="Aqui va el codigo de SKU"
                android:textColor="@color/colorBlack"
                android:textSize="25sp"
                app:fontFamily="@font/bebasneue_regular" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="8dp"
            android:layout_marginTop="5dp"
            android:background="#CCDEC2"></View>

        <LinearLayout
            android:id="@+id/linear_descripcion_rrd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_set_desc_read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/text_margin"
                android:text="Aqui va la Descripcion"
                android:textColor="@color/colorBlack"
                android:textSize="25sp"
                app:fontFamily="@font/bebasneue_regular" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="8dp"
            android:layout_marginTop="5dp"
            android:background="#CCDEC2"></View>

        <LinearLayout
            android:id="@+id/linear_um_rrd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/rrd_um"
                android:textSize="25sp"
                app:fontFamily="@font/bebasneue_regular" />

            <TextView
                android:id="@+id/textView_set_um_read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Aqui va el UM"
                android:textColor="@color/colorBlack"
                android:textSize="25sp"
                app:fontFamily="@font/bebasneue_regular" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="8dp"
            android:layout_marginTop="5dp"
            android:background="#CCDEC2"></View>

        <LinearLayout
            android:id="@+id/linear_cantidad_rrd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_total_read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/text_margin"
                android:text="@string/rrd_total"
                android:textSize="25sp"
                app:fontFamily="@font/bebasneue_regular" />

            <TextView
                android:id="@+id/textView_set_total_read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/text_margin"
                android:text=""
                android:textColor="@color/colorBlack"
                android:textSize="25sp"
                app:fontFamily="@font/bebasneue_regular" />

            <TextView
                android:id="@+id/textView_cantidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:gravity="center"
                android:text="@string/rrd_cantidad"
                android:textSize="25sp"
                app:fontFamily="@font/bebasneue_regular" />

            <EditText
                android:id="@+id/edittext_num"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="@string/hint_edit_text"
                android:inputType="number"
                android:focusable="true"
                app:fontFamily="@font/bebasneue_regular" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="8dp"
            android:layout_marginTop="5dp"
            android:background="#CCDEC2"></View>

        <LinearLayout
            android:id="@+id/linear_lectura_rrd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_producto_sku_rrd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/text_margin"
                android:text="@string/returns_prod_sku"
                android:textSize="25sp"
                app:fontFamily="@font/bebasneue_regular" />

            <TextView
                android:id="@+id/textView_vacio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/text_margin" />

            <TextView
                android:id="@+id/textView_vacio_dos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/text_margin" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_rrd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:layout_anchor="@id/app_bar"
                app:layout_anchorGravity="center"
                app:maxImageSize="30dp"
                app:srcCompat="@drawable/barcode_scan" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_editText_rrd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edittext_producto_sku_rrd"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="@string/hint_edit_text"
                android:focusable="true"
                android:inputType="number"
                app:fontFamily="@font/bebasneue_regular" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="8dp"
            android:layout_marginTop="5dp"
            android:background="#CCDEC2"></View>

    </LinearLayout>

    <Button
        android:id="@+id/btn_guardar_rrd"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#0B8E36"
        android:fontFamily="@font/bebasneue_regular"
        android:gravity="center"
        android:text="@string/button_guardar"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>